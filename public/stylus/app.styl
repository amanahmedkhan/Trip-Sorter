// Header Start
.header
	height 64px
	width 100%
	z-index 998
	display inline-block
	position relative
	.headerFixed
		width 100%
		height 64px
		position fixed
		padding 0 18px
		line-height 52px
		background $colorPrimary
		box-shadow 0 2px 5px 0 rgba($colorBlack,0.16), 0 2px 10px 0 rgba($colorBlack,0.12)
// Header End

// Sidebar Start
.leftSidebar
	position fixed
	height auto
	z-index 999
	width 100px
	left 180px
// Sidebar End

// Price Tag Start
.priceTag
	box-shadow 0 2px 5px 0 rgba($colorBlack,0.16), 0 2px 10px 0 rgba($colorBlack,0.12)
	border-radius 5px 0 0 5px
	position absolute
	color $colorWhite
	padding 7px 21px
	font-weight bold
	bottom 100px
	right 0
// Price Tag End

// Sorter Start
.sorter
	box-shadow 0 2px 5px 0 rgba($colorBlack,0.16), 0 2px 10px 0 rgba($colorBlack,0.12)
	background $colorWhite
	will-change left
	overflow hidden
	position fixed
	padding 15px
	height 100%
	z-index 999
	width 210px
	left 0px
	top 64px
	h2
		color $colorBlack
		small
			color $colorPink
// Sorter End

// SortList
.sortList
	.item
		box-shadow 0 2px 5px 0 rgba($colorBlack,0.16), 0 2px 10px 0 rgba($colorBlack,0.12)
		background-color $colorWhite
		transition box-shadow .25s
		text-transform capitalize
		display inline-block
		margin 0 10px 19px
		border-radius 2px
		overflow hidden
		width 31%
		h2
			color $colorWhite
			font-size $fontSize1
		li
			color $colorWhite
			padding 18px
		span
			display block
		&:nth-child(3n+1)
			margin-left 0
		&:nth-child(3n)
			margin-right 0

	.card
		background-repeat no-repeat
		background-position 0
		background-size cover
			
	.itemHeader
		background $colorWhite
		color $colorWhite
		padding 13px 20px
	
	.itemContent
		position relative
		text-align center
		
	.detail
		position relative
		padding 15px
		.colPlace
			width 50%
			padding 24px 0
			margin-bottom 100px

.train
	background url("/images/train.jpg")
	.itemHeader,.priceTag
		background $colorOrange
	.icon
		background-position 0 0
.bus
	background url("/images/bus.jpg")
	.itemHeader,.priceTag
		background $colorBlue
	.icon
		background-position 1px -33px
.car
	background url("/images/car.jpg")
	.itemHeader,.priceTag
		background $colorPink
	.icon
		background-position 1px -61px
// Sorter End

// Result Text Start
.resultText
	transform translate(-50%,-50%)
	font-size $fontSize2
	position absolute
	text-align center
	color $colorGrey
	left 50%
	top 50%
// Result Text End


// Responsive Start
// Media For Tablet
@media (max-width:1280px)
	.container
		padding 24px
	.content
		overflow hidden
	.sortList
		.item
			width: 48%
			&:nth-child(3n)
				margin-left 0
	
@media (max-width:1136px)
	.sortList
		.item
			width: 47%
	
// Media For Phone
@media (max-width:1136px)
	.container
		padding 18px 0
	.sortList
		padding 0 10px
		.item
			width: 100%
			margin: 0 0 12px

@media (max-width:768px)
	.main
		padding-left 0
	.leftSidebar
		position: relative
		width: 100%
		left: 0
	.sorter
		position: relative
		width: initial
		left: 0
		top: 0
	.header
		.headerFixed
			width: initial
			position: relative
			
// Responsive End